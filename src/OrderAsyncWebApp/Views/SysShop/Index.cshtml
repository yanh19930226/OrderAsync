@model ShopSearch
@{

}
<section class="main padder">
    <div class="clearfix">
        <h4><i class="icon-edit"></i> 店铺列表</h4>
    </div>
    <div class="row">

        <div class="col-lg-12">

            <section class="toolbar clearfix m-t-large m-b">
                <a title="添加店铺" href="/SysShop/Add" class="btn btn-info btn-circle active"><i class="icon-plus"></i>添加<b class="badge bg-info"></b></a>
            </section>
        </div>
        <div class="col-lg-12">
            <section class="panel">
                <div class="row text-small">
                    <form data-ajax="true" data-ajax-update="#divlist" data-ajax-mode="replace" asp-action="DoList" id="newform" asp-controller="SysShop" data-ajax-method="post">
                        <div class="col-lg-12 m-b-mini">
                            <input type="text" name="ShopId" id="ShopId" class="input-small inline form-control" style="width:330px" placeholder="店铺Id/域名">
                            <button type="submit" class="btn btn-small  btn-inverse">
                                查询
                            </button>
                        </div>
                    </form>
                </div>
                <div id="divlist" style="margin-top: 10px;">
                    @Html.Action("DoList", Model)
                </div>
            </section>
        </div>
    </div>
</section>
